    public bool PrikaziPretragu {get; set;}
    public bool PrikaziPretraguIkona { get; set; } = true;


    // metoda koja prikazuje polje za unos teksta za pretragu
    void PretragaKlik()
    {
        PrikaziPretragu = true;
        PrikaziPretraguIkona = !PrikaziPretragu;
    }
}